{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build wc",
            "type": "shell",
            "options": {
                "env": {
                    "GOPATH": "${env:GOPATH}:${workspaceFolder}",
                }
            },
            "command": "go",
            "args": [
                "build",
                "${workspaceFolder}/src/main/wc.go",
            ],
            "problemMatcher": [
                "$go"
            ],
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
            },
            "group": "build"
        }
    ]
}